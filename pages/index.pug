        #search(aria-label="Search Button")
          .svg-wrapper
            svg(height="100%" width="100%" xmlns="http://www.w3.org/2000/svg" )
              rect#shape(height="100%" width="100%" x="0" y="0")
              #text
                span.spot
                  p="Search"
    if !manage
      if list
        #conferences
          if !result
            span=""
          else if result!=1
            span=result + " results found for your search."
          else if result=1
            span=result + " result found for your search."
          for conf in list
            .item.small
              if conf.image != "false"
                .img(style={"background-image": "url(" + conf.image + ")"})
              h2=conf.title
              p=conf.text_date 
              p=conf.city + ", " + conf.country
              if conf.description 
                p.desc=conf.description
              .expand.toggle
                p + See More
              if conf.website
                .expand.website
                  a(href=conf.website target="_blank" rel="noopener")
                    p View website →
      if !list
        #noresults
          h2 No results found :-(
          p Try expanding your search,<br>or suggest a conference using the button below!
          a.rectangle(href="/suggest" label="Suggest a Conference!") 
            p Suggest a conference!
    if manage    
      #conferences
        if !result
          a(href="./").big No new suggestions to approve!
          img.big(src="./img/done-dawg.gif")
        else if result!=1
          span=result + " conferences waiting for your approval."
        else if result=1
          span=result + " conference waiting for your approval."
        if list 
          for suggestion in list
            .item.big.admin(data-id=suggestion._id)
              input.fileinput(type="file" name="icon" accept=".png,.jpg,.gif,.svg,.bmp" placeholder="")
              if suggestion.image
                .img(style={"background-image": "url(" + suggestion.image + ")"})
                  .change
                    .remove
                    .upload
              else 
                .img(style={"background-image": "url('./img/placeholder.png')"} alt=suggestion.title)
                  .change
                    .remove
                    .upload
              input.h2(placeholder=suggestion.title)
              input.date(placeholder=suggestion.text_date)
              input.place(placeholder=suggestion.city + ", " + suggestion.country)
              .description 
                textarea.desc(placeholder=suggestion.description)
              .expand.website
                a(href=suggestion.website target="_blank" rel="noopener")
                  p View website →
                input(placeholder=suggestion.website) 
              .buttonwrapper
                .button.approve(data-id="")
                  .svg-wrapper
                    svg(height="40" width="150" xmlns="http://www.w3.org/2000/svg" )
                      rect#shape(height="40" width="150")
                      #text
