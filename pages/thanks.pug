include includes/header.pug

  script(src="http://livejs.com/live.js") 
  link(rel='stylesheet', href='/css/index.css')

  title Design Conferences
  style(type='text/css').
    #splash {
      height: 250px;
    }
    #splash p {
      width: 75%;
      height: auto;
      text-align: center;
      padding: 30px 0 20px 0;
    }
    #splash p br {
      line-height: 10px
    }
    .wrapper .item.big {
      margin-top: 60px auto 0
    }

